<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<context-param>
		<param-name>configurationPath</param-name>
		<param-value>org.smartmvc.configuration.Configuration</param-value>
	</context-param>
	
	<listener>
		<listener-class>org.smartmvc.core.listener.WebInitListener</listener-class>
	</listener>
	
	

	<!-- SMARTMVC MVC servlet -->
	<servlet>
		<servlet-name>RequestDispatcher</servlet-name>
		<servlet-class>org.smartmvc.core.RequestDispatcher</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RequestDispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>


</web-app>
